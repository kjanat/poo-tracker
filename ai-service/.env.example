# Environment Configuration for Poo Tracker AI Service

# Basic App Settings
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Cache Settings
CACHE_TTL=3600
CACHE_PREFIX=poo_tracker

# ML Settings
ML_MODEL_PATH=./data/models
ENABLE_ML_FEATURES=true

# Analysis Settings
MAX_ANALYSIS_DAYS=365
MIN_ENTRIES_FOR_ML=10

# Security Settings (optional)
# API_KEY=your_api_key_here
# ENABLE_AUTH=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Backend Integration
BACKEND_URL=http://localhost:3002
BACKEND_TIMEOUT=30
