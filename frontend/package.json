{
  "name": "@poo-tracker/frontend",
  "version": "0.1.0",
  "description": "Frontend for Poo Tracker",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "clean": "pnpm --package=rimraf dlx rimraf dist node_modules",
    "type-check": "tsc --noEmit",
    "format:frontend": "prettier --write frontend",
    "format:ai": "uv run ruff format ai-service",
    "format:ai:check": "uv run ruff format ai-service --check",
    "format:prettier": "prettier --write .",
    "lint:fix:ai": "uv run ruff check ai-service --fix",
    "lint:fix:backend": "cd backend && golangci-lint run --fix ./... || true",
    "lint:backend": "cd backend && golangci-lint run ./... || true",
    "lint:ai": "uv run ruff check ai-service"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.517.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.3",
    "sonner": "^2.0.5",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5",
    "@eslint/compat": "^1.3.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@trunkio/launcher": "^1.3.4",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "prettier-plugin-prisma": "^5.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "private": true,
  "preinstall": "npx only-allow pnpm",
  "prepare": "husky",
  "lint-staged": {
    "backend/**/*.go": [
      "pnpm format:backend"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "bash -c 'cd frontend && pnpm type-check'",
      "pnpm format:frontend"
    ],
    "ai-service/**/*.py": [
      "pnpm lint:fix:ai",
      "pnpm format:ai"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm format:prettier"
    ],
    "*.{css,scss,less}": [
      "pnpm format:prettier"
    ]
  }
}
