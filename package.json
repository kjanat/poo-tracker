{
  "name": "poo-tracker",
  "version": "1.0.0",
  "description": "The brutally honest app for tracking your bowel movements",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "cd frontend & pnpm run dev",
    "dev:backend": "cd backend & pnpm run dev",
    "build": "concurrently \"pnpm run build:frontend\" \"pnpm run build:backend\"",
    "build:frontend": "cd frontend & pnpm run build",
    "build:backend": "cd backend & pnpm run build",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "cd backend & pnpm run db:migrate",
    "db:seed": "cd backend & pnpm run db:seed",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-sh": "^0.17.4",
    "prettier-plugin-sql": "^0.19.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=3"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-sql",
      "prettier-plugin-prisma",
      "prettier-plugin-sh"
    ]
  },
  "lint-staged": {
    "backend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter backend run lint:fix",
      "prettier --write"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter frontend run lint:fix",
      "prettier --write"
    ],
    "ai-service/**/*.py": [
      "uvx black",
      "uvx isort",
      "uvx ruff check --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  }
}
