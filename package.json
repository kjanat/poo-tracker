{
  "name": "poo-tracker",
  "version": "1.0.0",
  "description": "The brutally honest app for tracking your bowel movements",
  "type": "module",
  "private": true,
  "scripts": {
    "ai:format": "cd ai-service && uvx ruff format --check .",
    "ai:format:fix": "cd ai-service && uvx ruff format .",
    "ai:test": "cd ai-service && uv run pytest",
    "dev": "pnpm --parallel run dev",
    "dev:frontend": "pnpm --filter @poo-tracker/frontend run dev",
    "dev:backend": "pnpm --filter @poo-tracker/backend run dev",
    "dev:ai": "cd ai-service && uv run uvicorn main:app --reload",
    "dev:full": "concurrently \"pnpm dev\" \"pnpm dev:ai\"",
    "build": "pnpm --recursive run build",
    "build:frontend": "pnpm --filter @poo-tracker/frontend run build",
    "build:backend": "pnpm --filter @poo-tracker/backend run build",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "lint:ai": "cd ai-service && uvx ruff check .",
    "lint:ai:fix": "cd ai-service && uvx ruff format --fix .",
    "lint:frontend": "pnpm --filter @poo-tracker/frontend run lint",
    "lint:frontend:fix": "pnpm --filter @poo-tracker/frontend run lint:fix",
    "lint:backend": "pnpm --filter @poo-tracker/backend run lint",
    "lint:backend:fix": "pnpm --filter @poo-tracker/backend run lint:fix",
    "test": "pnpm --recursive run test",
    "test:watch": "pnpm --recursive run test:watch",
    "clean": "pnpm --recursive run clean",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "db:migrate": "pnpm --filter @poo-tracker/backend run db:migrate",
    "db:seed": "pnpm --filter @poo-tracker/backend run db:seed",
    "db:studio": "pnpm --filter @poo-tracker/backend run db:studio",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:watch": "onchange \"**/*.{ts,tsx,js,jsx,json,md}\" -- prettier --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "onchange": "^7.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "backend/**/*.{ts,tsx,js,jsx}": [
      "pnpm lint:backend:fix"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm lint:frontend:fix"
    ],
    "ai-service/**/*.py": [
      "uvx ruff format",
      "uvx ruff check --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ]
  }
}
